<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="ShipIM" id="23-03-2024--11-create-image-table">
        <createTable tableName="image">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints
                        primaryKey="true"/>
            </column>
            <column name="filename" type="VARCHAR">
                <constraints
                        nullable="false"/>
            </column>
            <column name="size" type="BIGINT">
                <constraints
                        nullable="false"/>
            </column>
            <column name="image_id" type="VARCHAR">
                <constraints
                        nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints
                        nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="image" baseColumnNames="user_id"
                                 constraintName="fk_image_user"
                                 referencedTableName="_user" referencedColumnNames="id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>
    </changeSet>
</databaseChangeLog>
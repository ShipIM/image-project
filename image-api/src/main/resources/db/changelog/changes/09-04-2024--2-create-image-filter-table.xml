<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="ShipIM" id="09-04-2024--2-create-image-filter-table">
        <createTable tableName="image_filter">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints
                        primaryKey="true"/>
            </column>
            <column name="status" type="VARCHAR">
                <constraints
                        nullable="false"/>
            </column>
            <column name="original_image_id" type="VARCHAR">
                <constraints
                        nullable="false"/>
            </column>
            <column name="modified_image_id" type="VARCHAR"/>
            <column name="request_id" type="VARCHAR">
                <constraints
                        unique="true"
                        nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints
                        nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="image_filter" baseColumnNames="original_image_id"
                                 constraintName="fk_image_filter_original_image"
                                 referencedTableName="image" referencedColumnNames="image_id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>
        <addForeignKeyConstraint baseTableName="image_filter" baseColumnNames="user_id"
                                 constraintName="fk_image_filter_user"
                                 referencedTableName="_user" referencedColumnNames="id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>
    </changeSet>
</databaseChangeLog>